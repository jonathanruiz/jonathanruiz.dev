---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card, CardContent, CardDescription, CardFooter, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Icons } from "@/components/icons";
import { buttonVariants } from "@/components/ui/button";
import { siteConfig } from "../../config/site"
---

<MainLayout title="Projects" description="This is the projects page for Jonathan Ruiz.">
	<section class="container items-center">
		<div class="flex flex-col gap-2">
			<div class="container pb-8 pt-6">
                {siteConfig.projects.map(project => (
                        <Card className="my-5 p-5 max-w-[700px]">
                            <CardContent>
                                <CardTitle className="flex mt-4">
                                    {project.title}
                                    <div>
                                        <a
                                            href={project.githubRepo}
                                            target="_blank"
                                            rel="noreferrer"
                                        >
                                            <div
                                                class={buttonVariants({
                                                    size: "sm",
                                                    variant: "ghost",
                                                })}
                                            >
                                                <Icons.gitHub className="h-5 w-5" />
                                                <span class="sr-only">GitHub</span>
                                            </div>
                                        </a>
                                    </div>
                                </CardTitle>
                                <CardDescription>{project.description}</CardDescription>
                            </CardContent>
                            <CardFooter >
                                    {project.tags.map(tag => {
                                        return (
                                            <Badge className="mr-2">{tag}</Badge>
                                        )
                                    })}
                            </CardFooter>
                        </Card>
                    )
                )}
            </div>
        </div>
  </section>
</MainLayout>